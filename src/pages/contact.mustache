        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="styles.css">
</head>

<body>
      <!--NAVBAR-->
    <nav class="navbar navbar-expand-md shadow-sm">
        <div class="container-fluid px-5 py-2">

            <!--LOGO-->
            <a class="navbar-brand" href="#">
                <img src="images/Logo.png" alt="Logo" height="30" class="d-md-none">
                <img src="images/Logo-with-text.png" alt="Logo" height="40" class="d-none d-md-inline">
            </a>

            <!--TOGGLE BUTTON-->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>


            <!--LINKS-->
            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link link-primary" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/#portfolio">Portfolio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/#about-me">About me</a>
                    </li>
                </ul>
            </div>

            <!--Contact Me Button-->
            <div class="d-none d-md-inline">
                <button class="button-contact-me" onclick="location.href = './contact.html';">
                    Contact Me
                </button>
            </div>
        </div>
    </nav>


    <!--CONTACT FORM-->
    <div class="container mt-5">
        <div class="text-center">
            Get In Touch
        </div>

        <h2 class="text-center mb-5">Contact me</h2>

        <form action="/send" method="POST">
            <div class="container">
                <div class="row">

                    <div class="col-12 col-md-6 mb-3">
                        <label for="firstname" class="form-label">First Name</label>
                    <input type="text" class="form-control" id="firstname" name="firstname" required>
                    </div>

                    <div class="col-12 col-md-6 mb-3">
                        <label for="lastname" class="form-label">Last Name</label>
                        <input type="text" class="form-control" id="lastname" name="lastname" required>
                    </div>

                    <div class="col-12 col-md-6 mb-3">
                        <label for="email" class="form-label">E-Mail</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>

                    <div class="col-12 col-md-6 mb-3">
                        <label for="phone" class="form-label">Phone number</label>
                        <input type="text" class="form-control" id="phone" name="phone">
                    </div>

                    <div class="col-12 mb-3">
                        <label for="textarea" class="form-label">Message</label>
                        <textarea class="form-control" name="letter" id="textarea" placeholder="What is your concern?" rows="6" required></textarea>
                    </div>

                    <div class="col-12 mb-3">
                        <input type="checkbox" class="form-check-input" id="terms" name="terms" required>
                        <label for="terms" class="form-label">I accept the terms</label>
                    </div>
                    
                    <div class="col text-center">
                        <button class="btn btn-primary" type="submit">Submit</button>
                    </div>
                
            
                </div>
            </div>
        </form>
    </div>



    <!--FOOTER-->
    <div class="container-fluid m-0 p-0" id="footer-on-contact-page">
        <footer class="py-3 mt-4 bg-secondary">
          <ul class="nav justify-content-center border-bottom pb-1 mb-3">
            <li class="nav-item"><a href="/" class="nav-link px-2 text-body-secondary">Home</a></li>
            <li class="nav-item"><a href="/contact" class="nav-link px-2 text-body-secondary">Contact</a></li>
            <li class="nav-item"><a href="/#portfolio" class="nav-link px-2 text-body-secondary">Portfolio</a></li>
          </ul>
          <p class="text-center text-body-secondary m-0"><img src="images/Logo-with-text.png" height="30rem"></p>
        </footer>
      </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>


</html>